{% extends 'base.html.twig' %}

{% block title %}Race{% endblock %}

{% block body %}
    <h1>Race</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ race.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ race.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('race_index') }}" class="btn btn-dark">back to list</a>



{% endblock %}
